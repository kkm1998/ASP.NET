@model IEnumerable<WebApplication3.Models.Product>

@{
    ViewBag.Title="Wszystkie produkty";
    Layout="_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Produkt</th>
        <th class="text-center">Cena</th>
        <th class="text-center">Panel edycji</th>
        <th class="text-center">Panel usuwania</th>
    </tr>
    @foreach(var item in Model)
    {
<tr>
    <td class="text-center">@item.ID</td>
    <td class="text-center">@item.Name</td>
    <td class="text-center">@item.Price.ToString("c")</td>
    <td class="text-center">
        <a asp-controller="Admin" asp-action="Edit" asp-route-productID="@item.ID">
            <button type="button" class="btn btn-success">Edit</button>
        </a>
    </td>
    <td class="text-center">
        <form asp-controller="Admin" asp-action="Delete" asp-route-productID="@item.ID">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>

    </td>
</tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-outline-warning">Dodaj produkt</a>
</div>