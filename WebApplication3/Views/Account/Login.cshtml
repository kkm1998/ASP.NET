@model WebApplication3.Models.ViewModel.LoginModel
@{
    ViewBag.Title = "Logowanie";
    Layout = "_AdminLayout";
}

<div class="text-danger text-center" asp-validation-summary="All"></div>

<form asp-action="Login" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group text-center text-capitalize" >
        <label asp-for="Name">Nazwa użytkownika</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group text-center text-capitalize">
        <label asp-for="Password">Hasło</label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="text-center"><button class="btn btn-success center" type="submit">Zaloguj</button></div>
</form>